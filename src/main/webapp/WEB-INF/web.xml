<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Departments</display-name>

    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.silich.controller.WelcomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddDepartmentServlet</servlet-name>
        <servlet-class>com.silich.controller.AddDepartmentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDepartmentServlet</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-class>com.silich.controller.AddEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditDepartmentServlet</servlet-name>
        <servlet-class>com.silich.controller.EditDepartmentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditDepartmentServlet</servlet-name>
        <url-pattern>/editDepartment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <servlet-class>com.silich.controller.EditEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <url-pattern>/editEmployee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmployeesListServlet</servlet-name>
        <servlet-class>com.silich.controller.EmployeesListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeesListServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

</web-app>